{
  "name": "lassi-corner",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Lassi Corner POS System",
  "author": "Alston Daniel Mendonca",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "package": "electron-builder --dir",
    "make": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "icon": "assets/images/favicon.ico",
    "asarUnpack": [
      "node_modules/ws"
    ],
    "appId": "com.lassicorner.app",
    "productName": "Lassi Corner",
    "artifactName": "Lassi Corner Setup.exe",
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "getOnline.js",
        "to": "getOnline.js"
      },
      {
        "from": "LC.db",
        "to": "LC.db"
      },
      {
        "from": "startMongoExpress.exe",
        "to": "startMongoExpress.exe"
      },
      {
        "from": "businessInfo.json",
        "to": "businessInfo.json"
      },
      {
        "from": "receiptFormat.json",
        "to": "receiptFormat.json"
      },
      {
        "from": "AddItem.html",
        "to": "AddItem.html"
      }
    ],
    "win": {
      "icon": "assets/images/favicon.ico",
      "target": "nsis",
      "publish":["github"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lassi Corner POS System",
      "allowElevation": false,
      "runAfterFinish": true,
      "installerIcon": "assets/images/favicon.ico",
      "uninstallerIcon": "assets/images/uninstall.ico"
    }
  },
  "devDependencies": {
    "@electron/packager": "^18.4.2",
    "cross-env": "^10.0.0",
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.3",
    "eslint": "^9.30.1",
    "globals": "^16.3.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "chart.js": "^4.4.8",
    "cloudflared": "^0.7.0",
    "dotenv": "^16.5.0",
    "electron-store": "^8.0.2",
    "electron-updater": "^6.6.2",
    "escpos": "3.0.0-alpha.6",
    "escpos-usb": "3.0.0-alpha.4",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.15.0",
    "open": "^10.1.2",
    "sqlite3": "^5.1.7",
    "usb": "2.8.0",
    "ws": "^8.18.2",
    "xlsx": "^0.18.5"
  }
}
